        {
          "name": "Upload Content - Multipart File",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": [],
                  "description": "Select a file to upload (PDF, JPG, PNG, etc.)"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/topics/1/contents/upload",
              "host": ["{{baseUrl}}"],
              "path": ["api", "topics", "1", "contents", "upload"]
            },
            "description": "Upload a file to Addition topic using multipart/form-data. Select a file in the Body > form-data section."
          }
        },
        {
          "name": "Upload Content - Base64 JSON",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fileName\": \"sample_document.txt\",\n  \"fileType\": \"TXT\",\n  \"fileDataBase64\": \"VGhpcyBpcyBhIHNhbXBsZSB0ZXh0IGZpbGUgZm9yIGRlbW9uc3RyYXRpb24uCkl0IGNvbnRhaW5zIG11bHRpcGxlIGxpbmVzLgpUaGlzIGlzIHRoZSB0aGlyZCBsaW5lLg==\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/topics/1/contents/upload-base64",
              "host": ["{{baseUrl}}"],
              "path": ["api", "topics", "1", "contents", "upload-base64"]
            },
            "description": "Upload content using Base64 encoded data. The sample Base64 string decodes to: 'This is a sample text file for demonstration.\\nIt contains multiple lines.\\nThis is the third line.'"
          }
        },
        {
          "name": "Delete Content",
