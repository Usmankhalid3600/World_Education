            ],
            "url": {
              "raw": "{{baseUrl}}/api/subjects/class/2",
              "host": ["{{baseUrl}}"],
              "path": ["api", "subjects", "class", "2"]
            },
            "description": "Get opted and unopted subjects for Grade 2 (requires JWT token)"
          }
        },
        {
          "name": "Get Subjects - Without Token (Should Fail)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/subjects/class/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "subjects", "class", "1"]
            },
            "description": "Test unauthorized access - should return 401/403"
          }
        }
      ]
    },
